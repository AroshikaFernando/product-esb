<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://ws.apache.org/ns/synapse">
    <registry provider="org.wso2.carbon.mediation.registry.WSO2Registry">
        <parameter name="cachableDuration">15000</parameter>
    </registry>
    <proxy xmlns="http://ws.apache.org/ns/synapse"
           name="LBProxy"
           transports="http https"
           startOnLoad="true">
        <description/>
        <target>
            <inSequence>
                <send>
                    <endpoint>
                        <loadbalance algorithm="org.apache.synapse.endpoints.algorithms.RoundRobin">
                            <endpoint name="ep1">
                                <http uri-template="http://localhost:8480/delay">
                                    <timeout>
                                        <duration>10000</duration>
                                        <responseAction>fault</responseAction>
                                    </timeout>
                                </http>
                            </endpoint>
                            <endpoint name="ep2">
                                <http uri-template="http://localhost:8480/test">
                                    <timeout>
                                        <duration>10000</duration>
                                        <responseAction>fault</responseAction>
                                    </timeout>
                                </http>
                            </endpoint>
                        </loadbalance>
                    </endpoint>
                </send>
            </inSequence>
            <outSequence>
                <send/>
            </outSequence>
        </target>
    </proxy>
    <api xmlns="http://ws.apache.org/ns/synapse"
         name="BackendAPI"
         context="/test">
        <resource methods="POST" uri-template="/*">
            <inSequence>
                <payloadFactory media-type="json">
                    <format>{"request":"$1","action":"pong"}</format>
                    <args>
                        <arg evaluator="json" expression="$.action"/>
                    </args>
                </payloadFactory>
                <respond/>
            </inSequence>
        </resource>
    </api>
    <api xmlns="http://ws.apache.org/ns/synapse"
         name="DelayAPI"
         context="/delay">
        <resource methods="POST" uri-template="/*">
            <inSequence>
                <script language="js">java.lang.Thread.sleep(150000);</script>
                <payloadFactory media-type="json">
                    <format>{"request":"$1","response":"delayed pong"}</format>
                    <args>
                        <arg evaluator="json" expression="$.action"/>
                    </args>
                </payloadFactory>
                <respond/>
            </inSequence>
        </resource>
    </api>
</definitions>